#!/bin/dash

pgrep -x sxhkd > /dev/null || sxhkd &
"$HOME/.scripts/picom.sh"
"$HOME/.scripts/polybar.sh"
xsetroot -cursor_name left_ptr &

bspc monitor -d 1 2 3 4 5 6 7

bspc config border_width         5
bspc config window_gap           20

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config single_monocle       true

bspc rule -a '*' state=pseudo_tiled
bspc rule -a Screenkey manage=off

bspc config focused_border_color "#cc241d"
bspc config normal_border_color "#282828e5"

# wallpaper
if [ -s "$HOME/.fehbg" ]; then
    "$HOME/.fehbg"
elif [ -e "$HOME/Pictures/background.png" ]; then
    feh --bg-fill --randomize --recursive "$HOME/Pictures/Wallpapers"
fi

