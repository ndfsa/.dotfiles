# terminal emulator
super + Return
    alacritty

# program launcher
super + @space
    rofi -show drun -show-icons

# file explorer
super + e
    nemo

super + p
    powermenu.sh

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# bspwm hotkeys

# restart bspwm
super + shift + r
    bspc wm -r

# close and kill
super + {q, alt + q}
    bspc node -{c,k}

# state/flags

# set the window state
super + {t,u,f,F}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# focus/swap
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
    dir={west,south,north,east}; bspc node -s "$dir.local" --follow || bspc node -m "$dir" --follow

# focus the next/previous window in the current desktop
alt + {_,shift + }Tab
    bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + Tab
    rofi -show window

# focus the last node/desktop
super + grave
    bspc node -f last

# focus or send to the given desktop
super + shift + {1-9,0}
    bspc node -d '^{1-9,10}' --follow

super + {1-9,0}
    bspc desktop -f '^{1-9,10}'

# preselect

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# move/resize

super + alt + {h,j,k,l}
    n=20; \
    { d1=left;   d2=right;  dx=-$n; dy=0;   \
    , d1=bottom; d2=top;    dx=0;   dy=$n;  \
    , d1=top;    d2=bottom; dx=0;   dy=-$n; \
    , d1=right;  d2=left;   dx=$n;  dy=0;   \
    } \
    bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# change wallpaper
super + bracketleft
    wallpaper.sh

# volume
XF86Audio{RaiseVolume,LowerVolume,Mute}
    volume.sh {-i 2,-d 2,-t}

XF86MonBrightness{Up,Down}
    brightness.sh -{inc,dec} 5

# Rotate nodes
super + w
    bspc node @/ -R 90

super + b
    {act=hide; pad=0,act=show; pad=30};polybar-msg cmd $act; bspc config top_padding $pad

# Equalize
super + equal
    bspc node @/ -B

{Print, super + shift + s}
    maim {_,-s} "$HOME/Pictures/Screenshots/$(date +%s).png" \
        && dunstify "Screenshot saved"

XF86Audio{Next,Prev,Play,Stop}
    playerctl {next, previous, play-pause, stop}

super + r
    playermenu.sh

super + v
    alacritty -e pulsemixer
