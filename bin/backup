#!/bin/dash

DAY=$(date +%A)

if [ -e /location/to/backup/incr/$DAY ] ; then
	rm -rf /location/to/backup/incr/$DAY
fi

rsync -aAXH							\
	--info=progress2				\
	--delete						\
	--dry-run						\
	--inplace						\
	--backup-dir=/bak/daily/$DAY	\
	--exclude='/dev/*'				\
	--exclude='/proc/*'				\
	--exclude='/sys/*'				\
	--exclude='/tmp/*'				\
	--exclude='/run/*'				\
	--exclude='/mnt/*'				\
	--exclude='/media/*'				\
	--exclude='/lost+found'			\
	--exclude='/home/*'				\
	--exclude='/bak/*'				\
	/								\
	/bak/weekly
